<div class="container-fluid">
	<div class="row">
		<div class="col s12">
			<h4 class="admin-page-title">會員總覽</h4>


			<!-- TABLE ACTION BAR -->
			<div class="admin-table-action-bar row no-margin-bottom">
				<div class="state-select-block col m6 s12 no-padding">
					<ul>
						<li><a id="product-all">全部</a></li>
						/
						<li><a id="product-state-deleted">回收桶</a></li>
						/
						<li><a id="product-state-no-stock">已缺貨</a></li>
					</ul>
				</div>
			</div>
			<!-- TABLE ACTION BAR END -->

			<div class="admin-table-container">
				<div class="row">
					<div class="col m8 s12 no-padding">
						<div class="search-box">
							<%= form_tag(admin_users_path, :method => "get") do %>
								<%= text_field_tag :keyword, params[:keyword], class: "search-box-input", placeholder: "姓名、信箱、id.." %>
								<button type="submit" class="btn search-box-submit" id="search-box-submit">搜尋會員</button>
							<% end %>
						</div>
					</div>
					<div class="col m4 s12 no-padding">
						<%= paginate @users %>
					</div>
				</div>
	      <table class="admin-table">
	        <thead>
	          <tr>
	              <th data-field="id">會員編號</th>
	              <th data-field="user">會員名稱</th>
	              <th data-field="total">email</th>
	              <th data-field="date">註冊日期</th>
	              <th data-field="actions">操作</th>
	          </tr>
	        </thead>

	        <tbody>
	        	<% @users.each do |u| %>
		          <tr>
		            <td><a href="<%= edit_admin_user_path(u) %>">#<%= u.id %></a></td>
		            <td><%= u.name %></td>
		            <td><%= u.email %></td>
		            <td><%= u.created_at.to_s(:db) %></td>
		            <td>
		            	<a href="#" class="icon-btn small"><i class="material-icons">edit</i>編輯</a>
		            	<a href="#" class="icon-btn small"><i class="material-icons">delete</i>刪除</a>
		            </td>
		          </tr>
	        	<% end %>
	        </tbody>
	      </table>
	      <%= paginate @users %>
			</div>

		</div>
	</div>
</div>
